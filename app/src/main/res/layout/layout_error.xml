<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Push_TalkActivity"
    android:layout_centerInParent="true"
    android:background="@drawable/background_jwazat">


    <Button
        android:id="@+id/back_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/back_btn" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/jawazat_logo" />

    <LinearLayout
        android:id="@+id/err_speech"
        android:layout_width="wrap_content"
        android:layout_height="563dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView
            android:id="@+id/error"
            android:layout_width="98dp"
            android:layout_height="188dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/redheadphones" />

        <TextView
            android:id="@+id/error_textt"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/error_text"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/mic1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/mic_button"
            android:orientation="vertical"
            android:src="@color/light_darkgreen">

            <ImageView
                android:id="@+id/mic_btn1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/microphone" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/network_err"
        android:layout_width="wrap_content"
        android:layout_height="563dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:id="@+id/error1"
            android:layout_width="98dp"
            android:layout_height="188dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/redheadphones" />

        <TextView
            android:id="@+id/error_textt1"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/network_text"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/mic2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:background="@drawable/mic_button"
            android:orientation="vertical"
            android:src="@color/light_darkgreen">

            <ImageView
                android:id="@+id/mic_btn2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/microphone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>